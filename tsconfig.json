{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "composite": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@app/*": ["./src/app/*"],
      "@mixins/*": ["./src/styles/mixins.scss"],
      "@components/*": ["./src/components/*"],
      "@common/*": ["./src/common/*"],
      "@enum/*": ["./src/common/enums/enums"],
      "@features/*": ["./src/features/*"],
      "@componentsUI/*": ["./src/components/ui/index"],
    },



  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src"],
  // "include": ["next.config.mjs"]
  "exclude": ["node_modules"],
}
